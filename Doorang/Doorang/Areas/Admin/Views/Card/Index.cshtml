@using Doorang_Core.Models
@model List<Card>
@{
    int count = 0;
}
<h1>
    Cards

    <a class="btn btn-primary" asp-action="Create">Create</a>
</h1>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">SubTitle</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
                <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>
                    <div style ="width:100px">
                        <img width="100%" src ="~upload/card/@item.ImgUrl"/>
                    </div>
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-controller="Card" asp-route-id=@item.Id>Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Card" asp-route-id=@item.Id>Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>